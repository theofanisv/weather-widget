{
    "name": "arshaviras/weather-widget",
    "description": "A weather widget for Filament",
    "keywords": [
        "arshaviras",
        "filament",
        "laravel",
        "weather-widget",
        "filament-plugin"
    ],
    "homepage": "https://github.com/arshaviras/weather-widget",
    "support": {
        "issues": "https://github.com/arshaviras/weather-widget/issues",
        "source": "https://github.com/arshaviras/weather-widget"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Arshavir Aghajanyan",
            "email": "arshaviras@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.15.0",
        "illuminate/contracts": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0|^9.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Arshaviras\\WeatherWidget\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arshaviras\\WeatherWidget\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Arshaviras\\WeatherWidget\\WeatherWidgetServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
